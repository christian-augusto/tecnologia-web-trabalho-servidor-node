{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["./src/infra/config"],
      "@config/*": ["./src/infra/config/*"],
      "@tests": ["./tests"],
      "@tests/*": ["./tests/*"],
      "@entities/*": ["./src/domain/entities/*"],
      "@persistence/*": ["./src/infra/persistence/*"],
      "@use_cases/*": ["./src/domain/use_cases/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
